<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Amuse application theme. -->
    <style name="AmuseAppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:statusBarColor" tools:ignore="NewApi">@color/transparent</item>
        <item name="android:navigationBarColor" tools:ignore="NewApi">@color/white</item>
        <item name="android:windowBackground">@color/white</item>
        <item name="colorPrimary">@color/accent_color</item>
        <item name="colorPrimaryDark">@color/accent_color</item>
        <item name="colorAccent">@color/accent_color</item>
        <item name="android:colorAccent" tools:ignore="NewApi">@color/accent_color</item>
        <item name="android:forceDarkAllowed">true</item>
    </style>

    <style name="AmuseBtnTheme" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:background">@drawable/def_btn</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@drawable/def_btn</item>
    </style>


    <style name="AmuseHorizontalDividerTheme">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:background">@color/lighter_gray</item>
    </style>

    <style name="AmuseVerticalDividerTheme">
        <item name="android:layout_width">1dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:background">@color/lighter_gray</item>
    </style>

</resources><!-- @author Liangcheng Juves --><!-- Created at 2020/6/2 17:50 -->
