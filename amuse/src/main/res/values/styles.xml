<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Amuse application theme. -->
    <style name="AmuseAppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:statusBarColor" tools:ignore="NewApi">
            @android:color/transparent
        </item>
        <item name="android:navigationBarColor" tools:ignore="NewApi">
            @android:color/white
        </item>
        <item name="android:windowBackground">@android:color/white</item>
        <item name="colorPrimary">@color/accent_color</item>
        <item name="colorPrimaryDark">@color/accent_color</item>
        <item name="colorAccent">@color/accent_color</item>
        <item name="android:colorAccent" tools:ignore="NewApi">@color/accent_color</item>
    </style>

    <style name="AmuseBtnTheme" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:background">@color/accent_color</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@android:color/white</item>
    </style>


    <style name="AmuseHorizontalDividerTheme">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:layout_gravity">center_horizontal</item>
    </style>

    <style name="AmuseVerticalDividerTheme">
        <item name="android:layout_width">1dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_vertical</item>
    </style>

</resources><!-- @author Liangcheng Juves --><!-- Created at 2020/6/2 17:50 -->
